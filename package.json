{
  "name": "devmirror",
  "displayName": "DevMirror",
  "publisher": "IVGDesign",
  "description": "Capture 100% of browser console output using Chrome DevTools Protocol",
  "keywords": [
    "console",
    "logging",
    "debugging",
    "chrome devtools",
    "cdp",
    "adobe cef",
    "cep",
    "browser console",
    "devtools protocol",
    "console capture"
  ],
  "version": "0.4.72",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "devmirror.setup",
    "devmirror.start",
    "devmirror.stop",
    "devmirror.showLogs",
    "workspaceContains:devmirror.config.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "devmirrorPackages",
          "name": "DevMirror Scripts",
          "icon": "$(mirror)",
          "contextualTitle": "DevMirror Scripts",
          "when": "workbenchState != empty"
        },
        {
          "type": "webview",
          "id": "devmirror.setupWizard",
          "name": "Startup Wizard",
          "icon": "$(wand)",
          "contextualTitle": "Startup Wizard",
          "visibility": "collapsed",
          "when": "devmirror.showWizard && workbenchState != empty"
        }
      ]
    },
    "commands": [
      {
        "command": "devmirror.setup",
        "title": "DevMirror: Setup Project"
      },
      {
        "command": "devmirror.start",
        "title": "DevMirror: Start Capture"
      },
      {
        "command": "devmirror.stop",
        "title": "DevMirror: Stop Capture"
      },
      {
        "command": "devmirror.showLogs",
        "title": "DevMirror: Show Logs"
      },
      {
        "command": "devmirror.openSettings",
        "title": "DevMirror: Open Settings"
      },
      {
        "command": "devmirror.addMirrorScript",
        "title": "Add Mirror Script",
        "icon": "$(add)"
      },
      {
        "command": "devmirror.refreshPackages",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "devmirror.openSetupWizard",
        "title": "Startup Wizard",
        "icon": "$(wand)"
      },
      {
        "command": "devmirror.undoMirrorScript",
        "title": "Undo Mirror Script",
        "icon": "$(discard)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "devmirror.refreshPackages",
          "when": "view == devmirrorPackages",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devmirror.addMirrorScript",
          "when": "view == devmirrorPackages && viewItem == script",
          "group": "inline@1"
        },
        {
          "command": "devmirror.openSetupWizard",
          "when": "view == devmirrorPackages && viewItem == script",
          "group": "inline@2"
        },
        {
          "command": "devmirror.undoMirrorScript",
          "when": "view == devmirrorPackages && viewItem == modifiedScript",
          "group": "inline@3"
        }
      ]
    },
    "configuration": {
      "title": "DevMirror",
      "properties": {
        "devmirror.chromePath": {
          "type": "string",
          "default": "",
          "description": "Path to Chrome executable (optional)"
        },
        "devmirror.outputDir": {
          "type": "string",
          "default": "./devmirror-logs",
          "description": "Directory for log output files"
        },
        "devmirror.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh open log files when new content is written"
        },
        "devmirror.autoFold": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fold log entries in the editor"
        },
        "devmirror.autoOpenBrowser": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open browser to CEF debug interface when enabled (CEF mode only)"
        },
        "devmirror.captureDeprecationWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Capture browser deprecation warnings like declarative Shadow DOM messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "open": "^10.1.0",
    "puppeteer-core": "^21.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.104.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.57.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "bin": {
    "devmirror-cdp": "./out/cli.js",
    "devmirror-cli": "./out/cli.js",
    "devmirror-companion": "./out/devmirror-companion.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivg-design/devMirror.git"
  },
  "bugs": {
    "url": "https://github.com/ivg-design/devMirror/issues"
  },
  "homepage": "https://github.com/ivg-design/devMirror#readme",
  "qna": "https://github.com/ivg-design/devMirror/issues",
  "sponsor": {
    "url": "https://github.com/sponsors/ivg-design"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/ivg-design/devMirror?style=social",
      "href": "https://github.com/ivg-design/devMirror",
      "description": "GitHub Stars"
    }
  ]
}
